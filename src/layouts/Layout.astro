---
export interface Props {
	title?: string;
	showNavigation?: boolean;
}

const { title = "KinGallery", showNavigation = true } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="manifest" href="/manifest.json" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#3B6F49" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		<title>{title}</title>
	</head>
	<body class="font-body bg-parchment text-gray-900">
		<div class="min-h-screen flex flex-col">
			<main class={showNavigation ? "flex-1 pb-20" : "flex-1"}>
				<slot />
			</main>
			
			{showNavigation && (
				<nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 safe-area-inset-bottom">
					<div class="flex justify-around items-center py-2">
						<a href="/" class={`flex flex-col items-center py-1 px-4 ${Astro.url.pathname === '/' ? 'text-forest' : 'text-gray-500'}`}>
							<svg class="w-6 h-6 mb-1" fill="currentColor" viewBox="0 0 24 24">
								<path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-1 16H6l3-4 2.03 2.71L14 13l4 6z"/>
							</svg>
							<span class="text-xs font-medium">Album</span>
						</a>
						
						<a href="/recents" class={`flex flex-col items-center py-1 px-4 ${Astro.url.pathname === '/recents' ? 'text-forest' : 'text-gray-500'}`}>
							<svg class="w-6 h-6 mb-1" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-xs font-medium">Recents</span>
						</a>
						
						<a href="/upload" class={`flex flex-col items-center py-1 px-4 ${Astro.url.pathname === '/upload' ? 'text-forest' : 'text-gray-500'}`}>
							<svg class="w-6 h-6 mb-1" fill="currentColor" viewBox="0 0 24 24">
								<path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
							</svg>
							<span class="text-xs font-medium">Add</span>
						</a>
						
						<a href="/all-photos" class={`flex flex-col items-center py-1 px-4 ${Astro.url.pathname === '/all-photos' ? 'text-forest' : 'text-gray-500'}`}>
							<svg class="w-6 h-6 mb-1" fill="currentColor" viewBox="0 0 24 24">
								<path d="M4 6H2v14c0 1.1.9 2 2 2h14v-2H4V6zm16-4H8c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-1 9H9V9h10v2zm-4 4H9v-2h6v2zm4-8H9V5h10v2z"/>
							</svg>
							<span class="text-xs font-medium">Photos</span>
						</a>
						
						<a href="/settings" class={`flex flex-col items-center py-1 px-4 ${Astro.url.pathname === '/settings' ? 'text-forest' : 'text-gray-500'}`}>
							<svg class="w-6 h-6 mb-1" fill="currentColor" viewBox="0 0 24 24">
								<path d="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.82,11.69,4.82,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z"/>
							</svg>
							<span class="text-xs font-medium">Settings</span>
						</a>
					</div>
				</nav>
			)}
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		overflow-x: hidden;
	}
	
	.safe-area-inset-bottom {
		padding-bottom: env(safe-area-inset-bottom);
	}
</style>
